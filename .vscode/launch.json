    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Server",
            "type": "python",
            "request": "launch",
            "module": "diplomacy.server.run",
            "justMyCode": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
            "command": "npm run start",
            "name": "Web App Start",
            "request": "launch",
            "cwd": "${workspaceFolder}/diplomacy/web",
            "type": "node-terminal",
        }
    ]
}