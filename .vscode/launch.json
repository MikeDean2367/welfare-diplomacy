    "version": "0.2.0",
    "configurations": [
        {
            "name": "GPT-4 NoWandb",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/simulate_game.py",
            "console": "integratedTerminal",
            "args": [
                "--disable_wandb",
            ],
            "justMyCode": true
        },
        {
            "name": "GPT-4 (Shorter)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/simulate_game.py",
            "console": "integratedTerminal",
            "args": [
                "--max_message_rounds",
                "2",
                "--early_stop_max_years",
                "3"
            ],
            "justMyCode": true
        },
        {
            "name": "GPT-4",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/simulate_game.py",
            "console": "integratedTerminal",
            "args": [],
            "justMyCode": true
        },
        {
            "name": "Random NoWandb",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/simulate_game.py",
            "console": "integratedTerminal",
            "args": [
                "--disable_wandb",
                "--agent_model",
                "random",
                "--max_message_rounds",
                "1",
            ],
            "justMyCode": true
        },
        {
            "name": "Random",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/simulate_game.py",
            "console": "integratedTerminal",
            "args": [
                "--agent_model",
                "random",
            ],
            "justMyCode": true
        },
        {
            "name": "Retreats NoWandb",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/simulate_game.py",
            "console": "integratedTerminal",
            "args": [
                "--disable_wandb",
                "--agent_model",
                "retreats",
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run Server",
            "type": "python",
            "request": "launch",
            "module": "diplomacy.server.run",
            "justMyCode": true
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Python: SVG to React (Generate Maps and JS)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/diplomacy/web/svg_to_react.py",
            "cwd": "${workspaceFolder}/diplomacy/web",
            "args": [
                "--input",
                "../maps/svg/standard.svg",
                "--output",
                "src/gui/maps/standard/",
                "--name",
                "SvgStandard"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}